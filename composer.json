{
	"name": "typisttech/remove-medium-cross-links",
	"description": "Remove Medium cross links footer from WordPress posts",
	"keywords": [
		"wordpress",
		"wp",
		"plugin",
		"medium"
	],
	"homepage": "https://www.typist.tech/projects/remove-medium-cross-links",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Typist Tech",
			"email": "remove-medium-cross-links@typist.tech",
			"homepage": "https://www.typist.tech/"
		},
		{
			"name": "Tang Rufus",
			"email": "tangrufus@gmail.com",
			"homepage": "https://www.typist.tech/",
			"role": "Developer"
		}
	],
	"support": {
		"email": "remove-medium-cross-links@typist.tech",
		"issues": "https://github.com/TypistTech/remove-medium-cross-links/issues",
		"forum": "https://wordpress.org/support/plugin/remove-medium-cross-links",
		"source": "https://github.com/TypistTech/remove-medium-cross-links"
	},
	"require-dev": {
		"jakoch/phantomjs-installer": "^2.1",
		"lucatume/wp-browser": "^1.19",
		"neronmoon/scriptsdev": "dev-move-scripts-dev-into-extra",
		"site5/phantoman": "^1.1",
		"wp-coding-standards/wpcs": "^0.10.0"
	},
	"scripts": {
		"build": [
			"rm -fr vendor",
			"composer install --no-dev --prefer-dist --no-suggest",
			"npm update",
			"grunt addtextdomain",
			"composer archive --format=zip --dir=release --file=remove-medium-cross-links"
		],
		"pre-tag": [
			"composer update --no-dev --prefer-dist --no-suggest",
			"npm update",
			"grunt version",
			"grunt addtextdomain",
			"grunt makepot",
			"doctoc README.md",
			"github_changelog_generator --no-verbose"
		],
		"check-style": [
			"phpcs --standard=ruleset.xml --colors -p -s .",
			"phpcs --standard=tests/ruleset.xml --colors -p -s tests"
		],
		"fix-style": [
			"phpcbf --standard=ruleset.xml -p --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 .",
			"phpcbf --standard=tests/ruleset.xml -p --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 tests"
		],
		"install-dev-extra": [
			"PhantomInstaller\\Installer::installPhantomJS",
			"phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
		],
		"test": "codecept run acceptance"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/TangRufus/scriptsdev"
		}
	],
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"extra": {
		"scripts-dev": {
			"post-install-cmd": [
				"@install-dev-extra"
			],
			"post-update-cmd": [
				"@install-dev-extra"
			]
		}
	},
	"archive": {
		"exclude": [
			"/*",
			".*",
			"!/languages",
			"!/src",
			"!/LICENSE",
			"!/README.txt",
			"!/*.php"
		]
	}
}
